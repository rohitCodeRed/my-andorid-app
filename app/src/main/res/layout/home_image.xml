<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradient_background" />

    <TextView
        android:id="@+id/imageTextPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/homeImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="118dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/image_text_prefix"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/imageUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageTextPrefix"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="-4dp"
        android:layout_toEndOf="@+id/imageTextPrefix"
        android:fontFamily="@font/montserrat"
        android:text="@string/image_user_name"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />
</RelativeLayout>
