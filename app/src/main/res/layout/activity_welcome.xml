<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    tools:context=".welcome.WelcomeActivity">

    <TextView
        android:id="@+id/tvApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/label_welcome"
        android:textSize="@dimen/typography_display1"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ivIllustrate"
        app:layout_constraintEnd_toEndOf="@+id/ivIllustrate"
        app:layout_constraintStart_toStartOf="@+id/ivIllustrate" />

    <ImageView
        android:id="@+id/ivIllustrate"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/src_background_welcome" />

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="294dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_rounded"
        android:stateListAnimator="@null"
        android:text="@string/label_signin"
        android:textAllCaps="false"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/typography_button2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivIllustrate"
        app:layout_constraintVertical_bias="0.141"
        tools:ignore="UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>